<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:s="http://smart/maui"
             xmlns:shell="clr-namespace:Template.MobileApp.Shell"
             xmlns:behaviors="clr-namespace:Template.MobileApp.Behaviors"
             xmlns:module="clr-namespace:Template.MobileApp.Modules.UI"
             x:Class="Template.MobileApp.Modules.UI.UIMoneyView"
             x:DataType="{x:Type module:UIMoneyViewModel}"
             s:BindingContextResolver.Type="{x:Type module:UIMoneyViewModel}"
             shell:ShellProperty.Title="Money"
             shell:ShellProperty.Function1Text="Back"
             shell:ShellProperty.Function1Enabled="True">

    <Grid RowDefinitions="*,Auto,Auto">

        <Button Grid.RowSpan="3"
                WidthRequest="72" HeightRequest="72"
                FontSize="10"
                TextColor="White" BackgroundColor="#f44336"
                Text="支払い"
                ContentLayout="Top, 0" CornerRadius="36" HorizontalOptions="Center" ImageSource="qr_code.png"
                TranslationY="-12" VerticalOptions="End" ZIndex="100" />

        <ScrollView Grid.Row="0"
                    behaviors:Scroll.DisableOverScroll="True"
                    BackgroundColor="#f5f5f5 " />

        <BoxView Grid.Row="1"
                 HeightRequest="0.5"
                 Color="#bdbdbd" />

        <Grid Grid.Row="2"
              ColumnDefinitions="*,*,72,*,*"
              BackgroundColor="White">
            <Button Grid.Column="0"
                    Command="{Binding ChangeCommand}"
                    CommandParameter="{x:Static module:SelectedPage.Home}"
                    behaviors:ButtonOption.DisableRippleEffect="True"
                    FontSize="10"
                    TextColor="{Binding Selected, Converter={module:SelectedToColor Page=Home, Selected=#f44336, Default=#9e9e9e}}"
                    BackgroundColor="White"
                    Text="ホーム"
                    ContentLayout="Top, 0" CornerRadius="0"
                    ImageSource="{Binding Selected, Converter={module:SelectedToImageSource Page=Home, Selected=home_selected.png, Default=home.png}}" />
            <Button Grid.Column="1"
                    Command="{Binding ChangeCommand}"
                    CommandParameter="{x:Static module:SelectedPage.Search}"
                    behaviors:ButtonOption.DisableRippleEffect="True"
                    FontSize="10"
                    TextColor="{Binding Selected, Converter={module:SelectedToColor Page=Search, Selected=#f44336, Default=#9e9e9e}}"
                    BackgroundColor="White"
                    Text="検索"
                    ContentLayout="Top, 0" CornerRadius="0"
                    ImageSource="{Binding Selected, Converter={module:SelectedToImageSource Page=Search, Selected=search_selected.png, Default=search.png}}" />
            <Button Grid.Column="3"
                    Command="{Binding ChangeCommand}"
                    CommandParameter="{x:Static module:SelectedPage.Notifications}"
                    behaviors:ButtonOption.DisableRippleEffect="True"
                    FontSize="10"
                    TextColor="{Binding Selected, Converter={module:SelectedToColor Page=Notifications, Selected=#f44336, Default=#9e9e9e}}"
                    BackgroundColor="White"
                    Text="お知らせ"
                    ContentLayout="Top, 0" CornerRadius="0"
                    ImageSource="{Binding Selected, Converter={module:SelectedToImageSource Page=Notifications, Selected=notifications_selected.png, Default=notifications.png}}" />
            <Button Grid.Column="4"
                    Command="{Binding ChangeCommand}"
                    CommandParameter="{x:Static module:SelectedPage.Account}"
                    behaviors:ButtonOption.DisableRippleEffect="True"
                    FontSize="10"
                    TextColor="{Binding Selected, Converter={module:SelectedToColor Page=Account, Selected=#f44336, Default=#9e9e9e}}"
                    BackgroundColor="White"
                    Text="アカウント"
                    ContentLayout="Top, 0" CornerRadius="0"
                    ImageSource="{Binding Selected, Converter={module:SelectedToImageSource Page=Account, Selected=account_selected.png, Default=account.png}}" />
        </Grid>

    </Grid>

</ContentView>
